        if (currentHelper.dispose) currentHelper.dispose();
        currentHelper = null;
      }
      if (!selected) return;
      let helper = null;
      if (selected.isDirectionalLight) {
        helper = new DirectionalLightHelper(selected, 5, 0xffaa00);
